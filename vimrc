set nocompatible
filetype on
syntax on
filetype indent on

set history=100
set showcmd
set incsearch
set number
set relativenumber
set cursorline
set noswapfile
set lines=35 columns=150
set colorcolumn=80
set guifont=Anonymous\ Pro\ Regular:h10
set hidden
set nowrap
set tabstop=8
set expandtab
set shiftwidth=4
set softtabstop=4
set smartindent
set autoindent
set hlsearch
set ignorecase
set smartcase
set showmatch

source $HOME/.vim/mappings.vim